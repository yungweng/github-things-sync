{
  "name": "github-things-sync",
  "version": "1.2.0",
  "description": "Sync GitHub PRs and Issues to Things 3 on macOS",
  "type": "module",
  "main": "./dist/cli/index.js",
  "bin": {
    "github-things-sync": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "scripts",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/cli/index.ts",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build",
    "postinstall": "node scripts/postinstall.js || true"
  },
  "keywords": [
    "github",
    "things",
    "things3",
    "macos",
    "productivity",
    "todo",
    "sync",
    "cli",
    "task-management",
    "pull-requests",
    "issues",
    "automation"
  ],
  "author": "yungweng",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yungweng/github-things-sync.git"
  },
  "homepage": "https://github.com/yungweng/github-things-sync#readme",
  "bugs": {
    "url": "https://github.com/yungweng/github-things-sync/issues"
  },
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "@octokit/rest": "^22.0.1",
    "chalk": "^5.6.2",
    "commander": "^12.0.0",
    "open": "^10.0.0",
    "ora": "^9.0.0",
    "update-notifier": "^7.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^20.0.0",
    "tsup": "^8.5.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
